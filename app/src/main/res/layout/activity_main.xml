
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="30dp" tools:context=".MainActivity"
    android:background="#151515">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout"
        android:background="#151515">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="1"
                android:id="@+id/button1"
                android:layout_column="5"
                android:onClick="btn1Clicked"
                android:background="#0404B4"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="2"
                android:id="@+id/button2"
                android:layout_column="6"
                android:onClick="btn2Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="3"
                android:id="@+id/button3"
                android:layout_column="7"
                android:onClick="btn3Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_column="8"
                android:onClick="btnPlusClicked"
                android:background="#FA58F4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="4"
                android:id="@+id/button4"
                android:layout_column="5"
                android:onClick="btn4Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="5"
                android:id="@+id/button5"
                android:layout_column="6"
                android:onClick="btn5Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="6"
                android:id="@+id/button6"
                android:layout_column="7"
                android:onClick="btn6Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="-"
                android:id="@+id/buttonMinus"
                android:layout_column="8"
                android:onClick="btnMiClicked"
                android:background="#FA58F4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="7"
                android:id="@+id/button7"
                android:layout_column="5"
                android:onClick="btn7Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="8"
                android:id="@+id/button8"
                android:layout_column="6"
                android:onClick="btn8Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/button9"
                android:layout_column="7"
                android:onClick="btn9Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="*"
                android:id="@+id/buttonMul"
                android:layout_column="8"
                android:onClick="btnMulClicked"
                android:background="#FA58F4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp">


            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="c"
                android:id="@+id/buttonC"
                android:layout_column="5"
                android:onClick="btnCClicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button0"
                android:layout_column="6"
                android:text="0"
                android:onClick="btn0Clicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="="
                android:id="@+id/buttonEq"
                android:layout_column="7"
                android:onClick="btnEqualClicked"
                android:background="#0404B4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="/"
                android:id="@+id/buttonDi"
                android:layout_column="8"
                android:onClick="btnDivClicked"
                android:background="#FA58F4"
                android:textSize="40dp"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

    </TableLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/numText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:inputType="none"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#151515"
        android:textColor="#FFFFFF" />
</RelativeLayout>
